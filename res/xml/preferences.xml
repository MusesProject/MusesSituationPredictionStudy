<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="@string/key_preference_screen" >

    <PreferenceCategory android:title="@string/category_labeling_title"
        android:key="@string/key_labeling_category" >
        <SwitchPreference
            android:key="@string/key_labeling_switch"
            android:summaryOff="@string/switch_labeling_summary_off"
            android:summaryOn="@string/switch_labeling_summary_on"
            android:title="@string/switch_labeling_title" />

        <Preference
            android:dependency="@string/key_labeling_switch"
            android:key="@string/key_session_count_preference"
            android:summary="@string/preference_session_count_summary"
            android:title="@string/preference_session_count_title" />
    </PreferenceCategory>
    
    
    <PreferenceCategory
        android:key="@string/key_classification_category"
        android:title="@string/category_classification_title">
        <SwitchPreference
            android:key="@string/key_classification_switch"
            android:summaryOff="@string/switch_classificiation_summary_off"
            android:summaryOn="@string/switch_classificiation_summary_on"
            android:title="@string/switch_classificiation_title" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/category_data_title" >
        <Preference
            android:key="@string/key_export_data_preference"
            android:summary="@string/preference_export_data_summary"
            android:title="@string/preference_export_data_title" />
        <Preference
            android:key="@string/key_reset_model_preference"
            android:summary="@string/preference_reset_model_title"
            android:title="@string/preference_reset_model_title" />
    </PreferenceCategory>

</PreferenceScreen>